<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/receiverchatdrawable"
        android:id="@+id/layoutformessage"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sender message display here"
            android:textSize="15sp"
            android:textColor="@color/mainDarkColor"
            android:paddingLeft="7dp"
            android:paddingRight="40dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:id="@+id/receivermessage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeofreceivedmessage"
            android:textSize="10sp"
            android:layout_toRightOf="@id/receivermessage"
            android:layout_marginLeft="40dp"
            android:layout_alignBottom="@+id/receivermessage"
            android:text="20:00"
            android:padding="7dp"
            android:textColor="#434343"/>

    </RelativeLayout>

</RelativeLayout>
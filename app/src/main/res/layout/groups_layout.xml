<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="90dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="-5dp">

        <TextView
            android:id="@+id/nameofgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Display here"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_toRightOf="@+id/cardviewofgroup"
            android:layout_marginLeft="15dp"
            android:textColor="@color/grey_dark"></TextView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/cardviewofgroup"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:strokeColor="@color/grey_dark"
            app:strokeWidth="1dp"
            app:cardCornerRadius="45dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fp"
                android:id="@+id/imageviewofgroup"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/grey_ligh"
            android:background="@color/grey_ligh"
            android:layout_below="@+id/cardviewofgroup"
            android:layout_toRightOf="@+id/cardviewofgroup"
            android:layout_marginTop="-5dp"/>


    </RelativeLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/receiverchatdrawable"
    android:maxWidth="310dp"
    android:maxHeight="400dp"
    android:minHeight="30dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tanmay"
        android:textSize="15sp"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/sender_name"
        android:layout_margin="8dp"
        android:inputType="text"
        android:gravity="start"
        app:layout_constraintBottom_toTopOf="@id/receivermessage"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sender message display here"
        android:textSize="15sp"
        android:textColor="@color/grey_dark"
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/receivermessage"
        android:layout_margin="8dp"
        android:inputType="textMultiLine|textLongMessage|textNoSuggestions"
        android:maxWidth="270dp"
        android:minWidth="50dp"
        android:gravity="start"
        app:layout_constraintBottom_toTopOf="@id/timeofreceivedmessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textColor="#434343"
        android:id="@+id/timeofreceivedmessage"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:padding="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>